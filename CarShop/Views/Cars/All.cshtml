@using CarShop.Core.Constants
@using CarShop.Core.Models
@model IEnumerable<CarFilterViewModel>
@{
	ViewData["Title"] = "Cars";
	var coupeTypes = (List<SelectListItem>)ViewBag.CoupeTypes;
	var doorConfigs = (List<SelectListItem>)ViewBag.DoorConfigs;
	var fuelTypes = (List<SelectListItem>)ViewBag.FuelTypes;
}

<style>
	.aside ul li {
		list-style: none;
	}

		.aside ul li a {
			text-decoration: none;
			color: black;
		}

	.aside {
		padding: 20px;
	}
</style>

<div class="text-center">
	<h1 class="display-4">All Cars</h1>
</div>

<div class="aside" style="float: left;">
	<h3>
		<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-funnel-fill" viewBox="0 0 16 16">
			<path d="M1.5 1.5A.5.5 0 0 1 2 1h12a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.128.334L10 8.692V13.5a.5.5 0 0 1-.342.474l-3 1A.5.5 0 0 1 6 14.5V8.692L1.628 3.834A.5.5 0 0 1 1.5 3.5v-2z" />
		</svg>
		Filter
	</h3>

	@*<h5>Release Year</h5>

	<h5>Horse Power</h5>*@

	<h5>Fuel Type</h5>
	<ul>
		@foreach (var ft in fuelTypes)
		{
			<li><a href="?fuelType=@ft.Value">@ft.Text</a></li>
		}
	</ul>

	<h5>Coupe Type</h5>
	<ul>
		@foreach (var ct in coupeTypes)
		{
			<li><a href="?coupeType=@ct.Value">@ct.Text</a></li>
		}
	</ul>

	<h5>Door Config</h5>
	<ul>
		@foreach (var dc in doorConfigs)
		{
			<li><a href="?doorConfig=@dc.Value">@dc.Text</a></li>
		}
	</ul>

	@*<h5>Price</h5>*@
</div>

<div class="text-center">
	@foreach (var car in Model)
	{
		@await Html.PartialAsync("_CarCardPartial", car)
	}
</div>
