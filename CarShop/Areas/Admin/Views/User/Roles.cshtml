@using CarShop.Core.Models
@model UserRolesViewModel
@{
	ViewData["Title"] = "User Roles";
}

<form method="post">
	<div class="form-floating mb-3">
		<h4>@Html.DisplayFor(m => m.Name)</h4>
	</div>
	<div class="form-floating mb-3">
		<div class="form-group">
			<label>User Roles</label>
			<select asp-for="RoleIds" multiple="" class="form-control">
				@foreach (var role in (IEnumerable<SelectListItem>)ViewBag.RoleItems)
				{	
					<option value="@role.Value" selected="@(role.Selected ? "selected" : "")">@role.Text</option>
				}
			</select>
		</div>
	</div>

	<div class="pt-1 mb-4">
		<button id="login-submit" type="submit" class="btn btn-lg btn-block">Save</button>
	</div>
</form>