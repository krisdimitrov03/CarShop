@using CarShop.Core.Models
@model UserRolesViewModel
@{
	ViewData["Title"] = "User Roles";
	var items = (List<SelectListItem>)ViewBag.RoleItems;
}

<form method="post">
	<input type="hidden" name="UserId" value="@Model.UserId"/>
	<div class="form-floating mb-3">
		<h4>@Html.DisplayFor(m => m.Name)</h4>
	</div>
	<div class="form-floating mb-3">
		<div class="form-group">
			<label>User Roles</label>
			<select asp-for="RoleNames" asp-items="@items" multiple="" class="form-control">
			</select>
		</div>
	</div>

	<div class="pt-1 mb-4">
		<button id="login-submit" type="submit" class="btn btn-lg btn-block">Save</button>
	</div>
</form>