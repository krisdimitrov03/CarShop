@using CarShop.Core.Models
@model UserDeleteViewModel
@{
	ViewData["Title"] = "Delete";
}

<link rel="stylesheet" href="~/css/style/delete-style.css">

<form method="post">
	<div class="main">
		<div class="question">
			<h3>Are you sure you want to delete this user from the database?</h3>
		</div>

		<div class="user">
			<h1>@Model.Name</h1>
		</div>

		<div class="actions">
			<button type="submit" class="delete">Delete</button>
			<a asp-area="Admin" asp-controller="User" asp-action="ManageUsers">Cancel</a>
		</div>
	</div>
</form>
